{
  "name": "lambdai-ext",
  "displayName": "lambdai_ext",
  "description": "",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Hover Provider",
      "properties": {
        "aiHoverProvider.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the AI hover provider"
        }
      }
    },
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ]
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "lambdaiContainer",
          "title": "LAMBDAI",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "lambdaiContainer": [
        {
          "id": "lambdaiPanel",
          "name": "Generated Code",
          "type": "webview",
          "contextualTitle": "LambdaAI Generated Code"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lambdaiPanel",
        "contents": "No AI generated code found in this workspace.\n[Generate Code](command:workbench.action.showCommands) using AI.execute to see it here.",
        "when": "lambdaiPanel.empty"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "generator-code": "^1.4.18",
    "prismjs": "^1.30.0",
    "vscode-languageclient": "^8.1.0",
    "yo": "^1.4.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.13",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}
